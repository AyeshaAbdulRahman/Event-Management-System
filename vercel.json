{
    "version": 2,
    "builds": [
      {
        "src": "frontend/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "backend/server.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "https://taqreeb-blue.vercel.app/api/(.*)",
        "dest": "backend/server.js"
      },
      {
        "src": "/",
        "dest": "frontend/index.htm"
      },
      {
        "src": "/(.*)",
        "dest": "frontend/$1"
      }
    ]
  }